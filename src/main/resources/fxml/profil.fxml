<GridPane fx:id= "root" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="de.hdm_stuttgart_mi.Controller.profilController"
          styleClass="main-panel"
          hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="800" prefWidth="1400" vgap="10.0" >
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="250.0" prefWidth="250.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="250.0" prefWidth="2000.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="450.0" prefHeight="750.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <!-- MenÃ¼ GridPain -->
    <GridPane GridPane.columnIndex="0" styleClass="Menue">
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="50.0" prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="100.0" vgrow="SOMETIMES" />
            <RowConstraints prefHeight="100.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"  prefWidth="65.0" />
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="175.0" />
        </columnConstraints>
        <padding><Insets top="0" right="5" bottom="0" left="5"/></padding>
        <children>
            <Button  fx:id="profil_bt" onAction="#changeScene" GridPane.columnIndex="0" GridPane.columnSpan="2" prefWidth="250.0" prefHeight="40" GridPane.rowIndex="1" >
                <graphic>
                    <ImageView fx:id="profilePic" GridPane.rowIndex="1"  GridPane.columnIndex="0" GridPane.columnSpan="1" ></ImageView>
                </graphic>
            </Button>

            <Button fx:id="blackboard_bt" text="Pinnwand" onAction="#changeScene"   prefWidth="250.0" prefHeight="40" GridPane.rowIndex="3"  GridPane.columnSpan="2"/>
            <Button fx:id="grocerylist_bt" text="Einkaufsliste" onAction="#changeScene"  prefWidth="250.0" prefHeight="40" GridPane.rowIndex="4"  GridPane.columnSpan="2"/>
            <Button fx:id="roommates_bt" text="Mitbewohner" onAction="#changeScene"  prefWidth="250.0" prefHeight="40" GridPane.rowIndex="5"  GridPane.columnSpan="2"/>
        </children>


    </GridPane>
   <GridPane GridPane.columnIndex="1" styleClass="Menue">
       <columnConstraints>
           <ColumnConstraints hgrow="SOMETIMES"  minWidth="250.0" prefWidth="250" />
           <ColumnConstraints hgrow="SOMETIMES"  minWidth="250.0" prefWidth="650.0" />
           <ColumnConstraints hgrow="SOMETIMES"  minWidth="100.0" prefWidth="200.0" />
       </columnConstraints>
       <rowConstraints>
           <RowConstraints minHeight="50.0" prefHeight="80.0" vgrow="SOMETIMES" />
           <RowConstraints minHeight="50.0" prefHeight="80.0" vgrow="SOMETIMES" />
           <RowConstraints minHeight="50.0" prefHeight="100.0" vgrow="SOMETIMES" />
           <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
       </rowConstraints>

       <padding><Insets top="0" right="25" bottom="0" left="20"/></padding>
   <!-- Name  -->
       <Label fx:id="fullname_lb" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Testname"/>
       <Label fx:id="phonenumber" GridPane.columnIndex="1" GridPane.rowIndex="0" text="Testname"/>
       <Label fx:id="moveInDate" GridPane.columnIndex="2" GridPane.rowIndex="0" text="Testname"/>


   <!-- Changebale Birthday  -->
      <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
          <Label text="Geburtstag"/>
          <Label  fx:id="birthday_lb" />
      </VBox>

       <Button onAction="#changeBirthday" fx:id="birthday_bt" GridPane.columnIndex="2" GridPane.rowIndex="1" text="Bearbeiten" prefWidth="150" prefHeight="40" />
       <DatePicker fx:id="birthdaypicker" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="150" visible="false" disable="true" showWeekNumbers="false" />
   <!-- ProfilPic change  -->
       <VBox GridPane.rowIndex="2"  GridPane.columnIndex="0" alignment="TOP_LEFT" spacing="5">
           <Label text="Dein Profilbild:" GridPane.rowIndex="2"  GridPane.columnIndex="0"/>
           <ImageView fx:id="ownProfilePic" GridPane.rowIndex="2"  GridPane.columnIndex="0" />
       </VBox>

       <HBox fx:id="profilpics" GridPane.rowIndex="2"  GridPane.columnIndex="1" GridPane.columnSpan="1" spacing="10" alignment="BASELINE_LEFT"/>
   <!-- delete user -->
       <Button fx:id="deleteUser_bt" onAction="#deleteUser" text="Ausziehen" GridPane.rowIndex="3"  GridPane.columnIndex="2" style="-fx-border-color: red; -fx-border-style: solid" />
   </GridPane>
</GridPane>