    <Line GridPane.rowIndex="0" startX="Infinity" endX="-Infinity" GridPane.valignment="BOTTOM" />
    <Button onAction="#edit" fx:id="edit" GridPane.columnIndex="4" GridPane.rowIndex="0"  GridPane.halignment="RIGHT">
        <graphic>
            <ImageView fx:id="editIconView" />
        </graphic>
    </Button>
   <!-- Name  -->
       <Label fx:id="fullname_lb" GridPane.columnIndex="0" GridPane.rowIndex="1" text="Hier sollte der name stehen"/>
       <Label fx:id="moveInDate" GridPane.columnIndex="2" GridPane.rowIndex="1" />

       <Label text="Deine Handynummer:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
       <Label fx:id="phonenumber" GridPane.columnIndex="2" GridPane.rowIndex="2" />
       <TextField fx:id="phonenumber_tf" onMouseClicked="#clear" GridPane.columnIndex="4" GridPane.rowIndex="2" visible="false"/>

   <!-- Changebale Birthday  -->

          <Label text="Geburtstag" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
          <Label  fx:id="birthday_lb" GridPane.columnIndex="2" GridPane.rowIndex="3"/>



       <DatePicker fx:id="birthdaypicker" GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="150" visible="false" disable="true" showWeekNumbers="false" />
   <!-- ProfilPic change  -->
       <VBox GridPane.rowIndex="4"  GridPane.columnIndex="0" alignment="TOP_LEFT" spacing="5">
